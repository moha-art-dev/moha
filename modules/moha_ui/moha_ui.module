/**
 * Implements hook_field_widget_form().
 */
function moha_ui_field_widget_form(&$form, &$form_state, $field, $instance, $langcode, $items, $delta, $element) {
  libraries_load(__MOHA_UI);
  drupal_add_js(MOHA_UI__PATH.'/js/moha_ui.js');

  $widget = array(
    '#type' => 'managed_file',
    '#process' => array('moha_ui_file_process'),
    '#value_callback' => 'moha_ui_file_value',
  );

  $element += $widget;

  $form['moha_ui_file_values'] = array(
    '#type' => 'hidden',
    '#value' => NULL,
  );

  $form['moha_ui_field_name'] = array(
    '#type' => 'hidden',
    '#value' => $field['field_name'],
  );

  $form['#submit'][] = 'moha_ui_field_widget_submit';

  return $element;
}

